<div class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom">
    <h2>ایجاد دوره</h2>
</div>
<form class="form-horizontal" action="/admin/courses/create" method="post" enctype="multipart/form-data">


    <div class="form-group row">
        <div class="col">
            <label for="title" class="control-label font-weight-bold">عنوان دوره</label>
            <input type="text"
                   class="form-control <%= checkLoginValid(messages.createCourse.title) %>"
                   name="title"
                   id="title"
                   placeholder="عنوان را وارد کنید"
                   value="<%= messages.createCourse.title.value %>">
            <div class="invalid-feedback">
                <%= messages.createCourse.title.error %>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <label for="type" class="control-label font-weight-bold font-weight-bold">نوع دوره</label>
            <select name="type" id="type" class="form-control">
                <option value="vip" <%= messages.createCourse.type.value == 'vip' ? 'selected' : '' %> >اعضای ویژه</option>
                <option value="cash" <%= messages.createCourse.type.value == 'cash' ? 'selected' : '' %> >نقدی</option>
                <option value="free" <%= messages.createCourse.type.value == 'free' ? 'selected' : '' %> >رایگان</option>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <label for="body" class="control-label font-weight-bold">متن</label>
            <textarea rows="5"
                      class="form-control <%= checkLoginValid(messages.createCourse.body) %>"
                      name="body"
                      id="body"
                      placeholder="متن مقاله را وارد کنید"><%= messages.createCourse.body.value %></textarea>
            <div class="invalid-feedback">
                <%= messages.createCourse.body.error %>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <label for="images" class="control-label font-weight-bold">تصویر دوره</label>
            <input type="file"
                   class="form-control <%= checkLoginValid(messages.createCourse.images) %>"
                   name="images"
                   id="images"
                   value="<%= messages.createCourse.images.value %>"
                   placeholder="تصویر مقاله را وارد کنید">
            <div class="invalid-feedback">
                <%= messages.createCourse.images.error %>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <label for="price" class="control-label font-weight-bold">قیمت</label>
            <input type="text"
                   class="form-control <%= checkLoginValid(messages.createCourse.price) %>"
                   name="price"
                   id="price"
                   placeholder="قیمت ها را وارد کنید"
                   value="<%= messages.createCourse.price.value %>">
            <div class="invalid-feedback">
                <%= messages.createCourse.price.error %>
            </div>
        </div>
        <div class="col">
            <label for="tags" class="control-label font-weight-bold">تگ ها</label>
            <input type="text"
                   class="form-control <%= checkLoginValid(messages.createCourse.tags) %>"
                   name="tags"
                   id="tags"
                   placeholder="تگ ها را وارد کنید"
                   value="<%= messages.createCourse.tags.value %>">
            <div class="invalid-feedback">
                <%= messages.createCourse.tags.error %>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <button type="submit" class="btn btn-danger">ارسال</button>
        </div>
    </div>
</form>
