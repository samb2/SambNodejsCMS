<div class="container">
    <div class="row justify-content-center">
        <div class="col-8">
            <div class="card border-primary bg-light mb-3 mt-5" style="max-width: 100%;">
                <div class="card-header pt-4">
                    <h2>Register</h2>
                </div>
                <div class="card-body">
                    <form action="/register" method="post" novalidate>
                        <div class="col-md-12 order-md-1">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="firstName">First name</label>
                                    <input type="text"
                                           class="form-control <%= checkRegisterValid(messages.register.firstName) %>"
                                           id="firstName"
                                           name="firstName"
                                           value='<%= messages.register.firstName.value %>'
                                           autofocus>
                                    <div class="invalid-feedback">
                                        <%= messages.register.firstName.error %>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="lastName">Last name</label>
                                    <input type="text"
                                           class="form-control <%= checkRegisterValid(messages.register.lastName) %>"
                                           id="lastName"
                                           name="lastName"
                                           value='<%= messages.register.lastName.value %>'>
                                    <div class="invalid-feedback">
                                        <%= messages.register.lastName.error %>
                                    </div>
                                </div>
                                <div class="col-md-12 mb-3">
                                    <label for="username">Username</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">@</span>
                                        </div>
                                        <input type="text"
                                               class="form-control <%= checkRegisterValid(messages.register.userName) %>"
                                               id="username"
                                               name="userName"
                                               placeholder="Username"
                                               value='<%= messages.register.userName.value %>'>
                                        <div class="invalid-feedback" style="width: 100%;">
                                            <%= messages.register.userName.error %>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 mb-3">
                                    <label for="email">Email <span class="text-muted">(Optional)</span></label>
                                    <input type="email"
                                           class="form-control <%= checkRegisterValid(messages.register.email) %>"
                                           id="email"
                                           name="email"
                                           placeholder="you@example.com"
                                           value='<%= messages.register.email.value %>'>
                                    <div class="invalid-feedback">
                                        <%= messages.register.email.error %>
                                    </div>
                                </div>
                                <div class="col-md-12 mb-3">
                                    <label for="password">Password</label>
                                    <input type="password"
                                           class="form-control <%= checkRegisterValid(messages.register.password) %>"
                                           id="password"
                                           name="password"
                                           value='<%= messages.register.password.value %>'>
                                    <div class="invalid-feedback">
                                        <%= messages.register.password.error %>
                                    </div>
                                </div>
                                <div class="col-md-12 mb-3">
                                    <label for="confirmpass">Password (confirm)</label>
                                    <input type="password"
                                           class="form-control <%= checkRegisterValid(messages.register.confirmPassword) %>"
                                           id="confirmpass"
                                           name="confirmPassword"
                                           value='<%= messages.register.confirmPassword.value %>'>
                                    <div class="invalid-feedback">
                                        <%= messages.register.confirmPassword.error %>
                                    </div>
                                </div>
                                <div class="col-md-12 mb-3">
                                    <input type="hidden" id="g-recaptcha-response" name="g-recaptcha-response">
                                </div>
                                <label class="checkbox-inline"><input type="checkbox"> I accept the <a href="#">Terms of
                                        Use</a> &amp; <a href="#">Privacy Policy</a></label>
                                <hr class="my-4">
                                <div>
                                    <%= captchaError %>
                                </div>
                                <div class="col-md-12 mb-3 text-center">
                                    <button class="btn btn-primary btn-lg">Register</button>
                                </div>
                            </div>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
<%- captcha -%>